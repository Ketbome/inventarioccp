---
import { hero } from "../locales/es/common.json";
---

<section class="w-full bg-cover bg-center flex items-center justify-center">
  <div class="max-w-6xl mx-4 sm:mx-8 text-center flex mt-10 mb-10">
    <img src={hero.icon.img} alt={hero.icon.alt} class="w-36 h-36 absolute md:w-52 md:h-52" />
    <div class="mt-16 md:mt-24 flex flex-col sm:flex-row">
      <img src={hero.backgroundImage.img} alt={hero.backgroundImage.alt} class="w-full sm:w-2/3" />
      <div class="bg-black bg-opacity-90 p-8 shadow-lg flex flex-col justify-center items-center space-y-4 w-full sm:w-1/3">
        <h1 class="text-3xl color-text md:text-4xl lg:text-5xl">{hero.welcome}</h1>
        <h2 class="text-3xl color-text md:text-4xl lg:text-5xl">{hero.description}</h2>
      </div>
    </div>
  </div>
</section>

<style>
  .color-text {
    color: rgb(226, 226, 226);
  }
</style>
